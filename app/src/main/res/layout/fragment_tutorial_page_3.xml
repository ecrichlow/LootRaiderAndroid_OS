<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutorial_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tutorial_page_3_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tutorial_page_3_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autoSizeTextType="uniform"
            android:textSize="@dimen/tutorial_title_field_text_size"
            android:textColor="@color/tutorial_text_color"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/tutorial_page_3_title" />

        <TextView
            android:id="@+id/tutorial_page_3_details_1_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/tutorial_title_bottom_margin"
            android:layout_marginBottom="@dimen/tutorial_description_bottom_margin"
            android:layout_centerHorizontal="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tutorial_page_3_title_text_view"
            app:layout_constraintBottom_toTopOf="@id/tutorial_page_3_platform_image_view"
            android:autoSizeTextType="uniform"
            android:textSize="@dimen/tutorial_description_text_size"
            android:textColor="@color/tutorial_text_color"
            android:textAlignment="center"
            android:text="@string/tutorial_page_3_description_1" />

        <ImageView
            android:id="@+id/tutorial_page_3_platform_image_view"
            android:layout_width="@dimen/tutorial_guard_image_width"
            android:layout_height="@dimen/tutorial_guard_image_height"
            android:layout_marginBottom="@dimen/tutorial_description_bottom_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tutorial_page_3_details_1_text_view"
            android:src="@mipmap/platform" />

        <TextView
            android:id="@+id/tutorial_page_3_details_2_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/tutorial_teleporter_view_bottom_margin"
            android:layout_centerHorizontal="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tutorial_page_3_platform_image_view"
            android:autoSizeTextType="uniform"
            android:textSize="@dimen/tutorial_description_text_size"
            android:textColor="@color/tutorial_text_color"
            android:textAlignment="center"
            android:text="@string/tutorial_page_3_description_2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tutorial_page_3_bi_directional_teleporter_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tutorial_teleporter_view_bottom_margin"
            android:layout_marginBottom="@dimen/tutorial_teleporter_view_bottom_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tutorial_page_3_details_2_text_view"
            android:orientation="horizontal"
            android:background="@color/clear_color">

            <ImageView
                android:id="@+id/tutorial_page_3_bi_directional_teleporter_image_view"
                android:layout_width="@dimen/tutorial_teleporter_image_width"
                android:layout_height="@dimen/tutorial_teleporter_image_height"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/teleporter1" />

            <TextView
                android:id="@+id/tutorial_page_3_bi_directional_teleporter_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:layout_constraintLeft_toRightOf="@id/tutorial_page_3_bi_directional_teleporter_image_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/tutorial_description_text_size"
                android:textColor="@color/tutorial_text_color"
                android:textAlignment="center"
                android:text="@string/tutorial_page_3_bi_directional_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tutorial_page_3_sending_teleporter_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tutorial_teleporter_view_bottom_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tutorial_page_3_bi_directional_teleporter_container"
            android:orientation="horizontal"
            android:background="@color/clear_color">

            <ImageView
                android:id="@+id/tutorial_page_3_sending_teleporter_image_view"
                android:layout_width="@dimen/tutorial_teleporter_image_width"
                android:layout_height="@dimen/tutorial_teleporter_image_height"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/teleporter1" />

            <TextView
                android:id="@+id/tutorial_page_3_sending_teleporter_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:layout_constraintLeft_toRightOf="@id/tutorial_page_3_sending_teleporter_image_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/tutorial_description_text_size"
                android:textColor="@color/tutorial_text_color"
                android:textAlignment="center"
                android:text="@string/tutorial_page_3_sending_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tutorial_page_3_receiving_teleporter_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tutorial_teleporter_view_bottom_margin"
            android:layout_marginBottom="@dimen/tutorial_description_bottom_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tutorial_page_3_sending_teleporter_container"
            app:layout_constraintBottom_toTopOf="@id/tutorial_page_3_next_image_button"
            android:orientation="horizontal"
            android:background="@color/clear_color">

            <ImageView
                android:id="@+id/tutorial_page_3_recieving_teleporter_image_view"
                android:layout_width="@dimen/tutorial_teleporter_image_width"
                android:layout_height="@dimen/tutorial_teleporter_image_height"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/teleporter5" />

            <TextView
                android:id="@+id/tutorial_page_3_receiving_teleporter_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:layout_constraintLeft_toRightOf="@id/tutorial_page_3_recieving_teleporter_image_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/tutorial_description_text_size"
                android:textColor="@color/tutorial_text_color"
                android:textAlignment="center"
                android:text="@string/tutorial_page_3_receiving_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/tutorial_page_3_next_image_button"
            android:layout_width="@dimen/default_next_button_width"
            android:layout_height="@dimen/default_next_button_height"
            android:scaleType="fitXY"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/tutorial_teleporter_view_bottom_margin"
            android:background="@color/clear_color"
            android:src="@mipmap/game_control_button_next" />

        <ImageButton
            android:id="@+id/tutorial_page_3_back_image_button"
            android:layout_width="@dimen/default_exit_button_width"
            android:layout_height="@dimen/default_exit_button_height"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/tutorial_teleporter_view_bottom_margin"
            android:background="@color/clear_color"
            android:src="@mipmap/game_control_button_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
